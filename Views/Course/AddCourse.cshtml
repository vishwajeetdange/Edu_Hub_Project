@model MVC_EduHub_Project.Course

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center text-primary mb-4">Add New Course</h1>

<hr class="my-4" />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="AddCourse" class="bg-light p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter Course Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"
                        placeholder="Enter Course Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="courseStartDate" class="control-label"></label>
                    <input asp-for="courseStartDate" class="form-control" type="date" />
                    <span asp-validation-for="courseStartDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="courseEndDate" class="control-label"></label>
                    <input asp-for="courseEndDate" class="form-control" type="date" />
                    <span asp-validation-for="courseEndDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="category" class="control-label"></label>
                    <input asp-for="category" class="form-control" placeholder="Enter Course Category" />
                    <span asp-validation-for="category" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="level" class="control-label"></label>
                    <select asp-for="level" class="form-control" asp-items="@ViewBag.level">
                        <option value="">Choose Level</option>
                    </select>
                    <span asp-validation-for="level" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Submit" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-controller="Course" asp-action="MyCourse" class="btn btn-secondary">Back to Course</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
