@model IEnumerable<MVC_EduHub_Project.Models.Material>

@{
    ViewData["Title"] = "List Of Material For that course";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<h1 class="text-center my-4">List of Material</h1>

<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.URL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UploadDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContentType)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.URL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UploadDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentType)
                </td>
                
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-secondary" asp-controller="Course" asp-action="MyCoursesStatusAccepted">Back to Course</a>