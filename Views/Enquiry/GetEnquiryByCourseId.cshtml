@model IEnumerable<MVC_EduHub_Project.Models.GetEnquiryByCourseId>

@{
    ViewData["Title"] = "GetEnquiryByCourseId";
    Layout = "~/Views/Shared/_LayoutEducator.cshtml";
}

<h1 class="text-center">List of Enquiries for Course</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Subject)</th>
            <th>@Html.DisplayNameFor(model => model.Message)</th> 
            <th>@Html.DisplayNameFor(model=> model.EnquiryDate)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>
                StudentName
                @* @Html.DisplayNameFor(model => model.UserName) *@
                </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Subject)</td> 
                <td>@Html.DisplayFor(modelItem => item.Message)</td>
                <td>@Html.DisplayFor(modelItem=> item.EnquiryDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>
                    <button class="btn btn-dark btn-sm">
                        <a asp-action="Edit" asp-route-id="@item.EnquiryId">Edit</a>
                    </button>
                    @* <button class="btn btn-dark btn-sm">
                        <a asp-action="Delete" asp-route-id="@item.EnquiryId">Delete</a>
                    </button> *@
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a asp-controller="Enquiry" asp-action="EnquiryList" class="btn btn-secondary">Back to Enquiry List</a>
</div>