@model MVC_EduHub_Project.Models.Enquiry

@{
    ViewData["Title"] = "Update Enquiry";
    Layout = "~/Views/Shared/_LayoutEducator.cshtml";

}

<h1 class="text-center">Update Enquiry</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div  class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control"  required>
                <div class="invalid-feedback">Please enter a subject.</div>
            </div>

            <div class="form-group">
                <label  asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control"  rows="3" required></textarea>
                <div class="invalid-feedback">Please enter a message.</div>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="@ViewBag.Status"  required>
                    <option value="">Choose Status</option>
                </select>
                <div class="invalid-feedback">Please select a status.</div>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
        <br>
        <div>
            <a class="btn btn-secondary" asp-action="EnquiryList">Back to Enquiry</a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"  
        integrity="sha384-DfXdz27hpz0l+9CxIv4r9+627T1RL79DPz8L96906DoH7nu2Q61r0C7yHw676Lq"  
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-hc0z5xN12Bwe0t4O31x/i1QhW2P06j3g096I6T896ZKGK2yl2QvZ6jIW36Ao+M4Q"  
        crossorigin="anonymous"></script>
}